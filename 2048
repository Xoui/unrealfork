<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Games</title>
  <style>
    .games-button {
      position: fixed;
      top: 10px;
      right: 10px;
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .game-container {
      display: none;
      position: fixed;
      top: 50%;
      transform: translateY(-50%);
      text-align: center;
    }

    .game-image {
      width: 200px;
      height: auto;
      margin-bottom: 10px;
    }

    .game-name {
      font-size: 20px;
      font-weight: bold;
    }

    #slither-container {
      left: calc(50% - 250px);
    }

    #2048-container {
      left: calc(50% + 50px);
    }
  </style>
</head>
<body>
  <button class="games-button" onclick="toggleGames()">Games</button>

  <div id="slither-container" class="game-container">
    <img src="https://play-lh.googleusercontent.com/oObkhKfUXOY5yzheKe9w1Y1pXZBgdiSksMeNmT0BijoQ8J75maTCIW2TA7-6pA6EMA" alt="Slither.io" class="game-image">
    <p class="game-name">Slither.io</p>
    <canvas id="slither-game" style="display:none;"></canvas>
  </div>

  <div id="2048-container" class="game-container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/cd/2048_logo.png/240px-2048_logo.png" alt="2048" class="game-image">
    <p class="game-name">2048</p>
    <!-- iframe for 2048 game will be loaded here -->
  </div>

  <script>
    let gamesVisible = false;

    function toggleGames() {
      const slitherContainer = document.getElementById('slither-container');
      const game2048Container = document.getElementById('2048-container');
      gamesVisible = !gamesVisible;
      slitherContainer.style.display = gamesVisible ? 'block' : 'none';
      game2048Container.style.display = gamesVisible ? 'block' : 'none';
      // Load 2048 game iframe when it's shown
      if (gamesVisible && !document.getElementById('2048-game')) {
        const iframe = document.createElement('iframe');
        iframe.id = '2048-game';
        iframe.src = 'https://play2048.co/';
        iframe.frameBorder = '0';
        iframe.style.display = 'none';
        game2048Container.appendChild(iframe);
      }
    }
  </script>
</body>
</html>
